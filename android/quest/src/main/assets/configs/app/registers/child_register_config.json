{
  "appId": "app",
  "configType": "register",
  "id": "childRegister",
  "fhirResource": {
    "baseResource": {
      "resource": "Patient",
      "dataQueries": [
        {
          "id": "childQueryByDate",
          "filterType": "DATE",
          "key": "birthdate",
          "valueType": "DATE",
          "valueDate": "2017-03-14",
          "paramPrefix": "GREATERTHAN_OR_EQUALS"
        }
      ]
    },
    "relatedResources": [
      {
        "resource": "Condition",
        "searchParameter": "subject"
      },
      {
        "resource": "CarePlan",
        "searchParameter": "subject"
      },
      {
        "resource": "Task",
        "searchParameter": "subject"
      }
    ]
  },
  "searchBar": {
    "visible": true,
    "display": "{{ search.by.name }}",
    "computedRules": [
      "patientName",
      "patientId"
    ]
  },
  "registerCard": {
    "rules": [
      {
        "name": "patientName",
        "condition": "true",
        "actions": [
          "data.put('patientName', fhirPath.extractValue(Patient, \"Patient.name.select(given + ' ' + family)\"))"
        ]
      },
      {
        "name": "patientId",
        "condition": "true",
        "actions": [
          "data.put('patientId', fhirPath.extractValue(Patient, 'Patient.identifier[0].value'))"
        ]
      }
    ],
    "views": [
      {
        "viewType": "COLUMN",
        "children": [
          {
            "viewType": "SERVICE_CARD",
            "details": [
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "@{patientName}",
                "primaryTextColor": "#000000"
              },
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "ID: @{patientId}",
                "fontSize": 14.0,
                "primaryTextColor": "#000000"
              }
            ],
            "showVerticalDivider": false,
            "actions": [
              {
                "trigger": "ON_CLICK",
                "workflow": "LAUNCH_PROFILE",
                "id": "childProfile"
              }
            ]
          }
        ]
      }
    ]
  }
}