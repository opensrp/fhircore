{
  "appId": "app",
  "configType": "register",
  "id": "cmntdRegister",
  "fhirResource": {
    "baseResource": {
      "resource": "Condition",
      "dataQueries": [
        {
          "id": "cmntdBuruliUlcerQueryByCode",
          "filterType": "TOKEN",
          "key": "code",
          "valueType": "CODEABLECONCEPT",
          "valueCoding": {
            "system": "http://snomed.info/sct",
            "code": "99990000"
          }
        },
        {
          "id": "cmntdLeprosyQueryByCode",
          "filterType": "TOKEN",
          "key": "code",
          "valueType": "CODEABLECONCEPT",
          "valueCoding": {
            "system": "http://snomed.info/sct",
            "code": "99990001"
          }
        },
        {
          "id": "cmntdLymphaticFamiliarisesQueryByCode",
          "filterType": "TOKEN",
          "key": "code",
          "valueType": "CODEABLECONCEPT",
          "valueCoding": {
            "system": "http://snomed.info/sct",
            "code": "99990002"
          }
        },
        {
          "id": "cmntdQueryByClinicalStatus",
          "filterType": "TOKEN",
          "key": "clinical-status",
          "valueType": "CODEABLECONCEPT",
          "valueCoding": {
            "system": "http://terminology.hl7.org/CodeSystem/condition-clinical",
            "code": "active"
          }
        }
      ]
    },
    "relatedResources": [
      {
        "resource": "Patient",
        "fhirPathExpression": "Condition.subject",
        "relatedResources": [
          {
            "resource": "CarePlan",
            "searchParameter": "subject"
          }
        ]
      }
    ]
  },
  "searchBar": {
    "visible": true,
    "display": "{{ search.by.name }}",
    "computedRules": [
      "patientName",
      "patientId"
    ]
  },
  "registerCard": {
    "rules": [
      {
        "name": "patientName",
        "condition": "true",
        "actions": [
          "data.put('patientName', fhirPath.extractValue(Patient.get(0), \"Patient.name.select(given + ' ' + family)\"))"
        ]
      },
      {
        "name": "patientId",
        "condition": "true",
        "actions": [
          "data.put('patientId', fhirPath.extractValue(Patient.get(0), 'Patient.identifier[0].value'))"
        ]
      }
    ],
    "views": [
      {
        "viewType": "COLUMN",
        "children": [
          {
            "viewType": "SERVICE_CARD",
            "details": [
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "@{patientName}",
                "primaryTextColor": "#000000"
              },
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "ID: @{patientId}",
                "fontSize": 14.0,
                "primaryTextColor": "#000000"
              }
            ],
            "showVerticalDivider": false,
            "actions": [
              {
                "trigger": "ON_CLICK",
                "workflow": "LAUNCH_PROFILE",
                "id": "otherRegistersProfile"
              }
            ]
          }
        ]
      }
    ]
  }
}