{
  "appId": "app",
  "configType": "profile",
  "id": "inventoryProfile",
  "fhirResource": {
    "baseResource": {
      "resource": "Group"
    },
    "relatedResources": [
      {
        "resource": "Observation",
        "searchParameter": "subject"
      }
    ]
  },
  "rules": [
    {
      "name": "commodityName",
      "condition": "true",
      "actions": [
        "data.put('commodityName', fhirPath.extractValue(Group, 'Group.name'))"
      ]
    }
  ],
  "views": [
    {
      "viewType": "COLUMN",
      "children": [
        {
          "viewType": "CARD",
          "padding": 0,
          "content": [
            {
              "viewType": "COLUMN",
              "children": [
                {
                  "viewType": "COMPOUND_TEXT",
                  "primaryText": "@{commodityName}",
                  "primaryTextColor": "#000000"
                },
                {
                  "viewType": "SPACER",
                  "height": 10
                },
                {
                  "viewType": "ROW",
                  "children": [
                    {
                      "viewType": "PERSONAL_DATA",
                      "personalDataItems": [
                        {
                          "label": {
                            "viewType": "COMPOUND_TEXT",
                            "primaryText": "82",
                            "primaryTextColor": "#000000"
                          },
                          "displayValue": {
                            "viewType": "COMPOUND_TEXT",
                            "primaryText": "Available",
                            "fontSize": 14,
                            "primaryTextColor": "#000000"
                          }
                        }
                      ]
                    },
                    {
                      "viewType": "SPACER",
                      "height": 10
                    },
                    {
                      "viewType": "PERSONAL_DATA",
                      "personalDataItems": [
                        {
                          "label": {
                            "viewType": "COMPOUND_TEXT",
                            "primaryText": "Tabs",
                            "primaryTextColor": "#000000"
                          },
                          "displayValue": {
                            "viewType": "COMPOUND_TEXT",
                            "primaryText": "Units",
                            "fontSize": 14,
                            "primaryTextColor": "#000000"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "viewType": "SPACER",
          "height": 16
        }
      ]
    }
  ],
  "fabActions": [
    {
      "id": "ActionButton",
      "visible": true,
      "display": "Adjust/Restock",
      "actions": [
        {
          "trigger": "ON_CLICK",
          "workflow": "LAUNCH_QUESTIONNAIRE",
          "questionnaire": {
            "id": "cfdba05b-fb46-4673-a1bd-e300ab1afe94",
            "title": "Stock Level Adjustment",
            "saveButtonText": "ADJUST STOCK LEVELS",
            "setPractitionerDetails": true,
            "setOrganizationDetails": true,
            "resourceIdentifier": "@{taskFor}"
          }
        }
      ]
    }
  ]
}
