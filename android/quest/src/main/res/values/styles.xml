    <style name="Theme.MyQuestionnaire" parent="Theme.Questionnaire">
        <item name="questionnaireQuestionTextStyle">
            @style/TextAppearance.MaterialComponents.Headline1
        </item>

        <item name="questionnaireRadioButtonStyle">
            @style/TextAppearance.MaterialComponents.Chip
        </item>


        <item name="questionnaireTextInputLayoutStyle">
            @style/EditTextStyle
        </item>



    </style>

    <style name="Theme.MyQuestionnaire2" parent="Theme.Questionnaire">
        <item name="questionnaireRadioButtonStyle">
            @style/RadioButtonWithoutBorder
        </item>
    </style>


    <style name="RadioButtonWithoutBorder">
        <item name="android:background">@drawable/transparent_border</item>
    </style>

    <drawable name="transparent_border">
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </drawable>


    <style name="EditTextStyle">
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/ic_delete</item>
    </style>



    <style name="Widget.Simple.Chip.Answer" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/answer_chip_background</item>
        <item name="chipStartPadding">0dp</item>
        <item name="textStartPadding">24dp</item>
        <item name="textEndPadding">24dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
        <item name="android:textColor">@color/answer_chip_text</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PatientEntry">
        <item name="endIconTint">@color/color_on_surface_67</item>
        <item name="startIconTint">@color/color_on_surface_67</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/ic_clear_circular_16dp</item>

    </style>

