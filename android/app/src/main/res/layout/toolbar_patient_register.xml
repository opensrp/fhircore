<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp">

        <ImageButton
            android:id="@+id/btn_drawer_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_hamburger"
            android:backgroundTint="@color/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/covax_client"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/white"
            tools:textColor="#000000"
            android:fontFamily="sans-serif-medium" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/btn_show_overdue_patients"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:gravity="center_vertical"
            android:text="@string/show_overdue"
            android:textColor="@color/white"
            tools:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_bg"
            android:textSize="17sp"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:hint="@string/search_hint"
            android:textColorHint="#AEAEAE"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableTint="#AEAEAE"
            android:fontFamily="sans-serif" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_thicker_stroked_bg"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/layout_scan_barcode" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_barcode"
                android:drawableTint="@color/white" />

        <TextView
            android:id="@+id/btn_scan_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="SCAN BAR CODE"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>