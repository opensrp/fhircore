<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/base_register_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetEnd="0dp"
            android:layout_alignParentTop="true">

            <include layout="@layout/toolbar_base_register" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/empty_list_message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@id/btn_register_new_client"
            android:layout_below="@id/base_register_toolbar"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/list_empty_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/empty_client_list_message_title"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/list_empty_message_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_empty_message_title"
                android:layout_marginBottom="40dp"
                android:text="@string/empty_client_list_message_details"
                android:layout_gravity="center"/>
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/list_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_register_new_client"
            android:layout_below="@id/base_register_toolbar"
            android:layout_marginBottom="15dp">

        </androidx.viewpager2.widget.ViewPager2>

        <Button
            android:id="@+id/btn_register_new_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_white_bg"
            android:backgroundTint="@color/colorPrimary"
            android:drawableStart="@drawable/ic_add"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:paddingHorizontal="10dp"
            android:paddingEnd="15dp"
            android:text="@string/register_new_client"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/drawer_menu_bg_color"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_menu_header"
        app:itemIconTint="#AEAEAE"
        app:itemTextColor="@color/white"
        app:itemTextAppearance="@style/menu_text_style"
        app:itemIconSize="32dp"
        app:itemIconPadding="10dp"
        app:itemBackground="@drawable/drawer_menu_item_selector">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#404040"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_sync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sync"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_sync"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textSize="19sp"
                android:layout_weight="1"
                android:paddingStart="15dp"/>

            <TextView
                android:id="@+id/tv_last_sync_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/last_sync_timestamp"
                android:textColor="#E0E0E0"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="end"
                android:paddingEnd="15dp" />

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loader_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#55000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        tools:visibility="gone">

        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminate="true"
            android:background="#fff"
            android:padding="10dp"
            style="@style/Widget.MaterialComponents.CircularProgressIndicator"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>